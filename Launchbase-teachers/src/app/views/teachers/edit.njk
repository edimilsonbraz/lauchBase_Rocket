{% extends "layout.njk" %}

{% block content %}
<div class="card">

    <section
        class="avatar" 
        style="background: url({{teacher.avatar_url}}) 
        no-repeat center center / cover">
    </section>

    <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
        
            <div class="topo">
                <h3>Editar Teacher</h3>
            </div>

            {% include 'teachers/fields.njk' %}

            <input type="hidden" name="id" value={{ teacher.id }}>
        </form>

         
    </section>
</div>

{% endblock %}