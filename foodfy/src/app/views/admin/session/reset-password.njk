{% extends "./layoutLogin.njk" %}

    {% block head %}
        <title>Foodfy - Password</title>
    {% endblock %}

{% block content %}

    <section class="login password content">

        <form method="POST" action="/admin/reset-password">

            <div class="header">
                <h3>Nova Senha</h3>
            </div>

            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')" required="required">
                    
                </div>
            </div>

            <div class="item">
                <div>Nova senha</div>
                <div class="input">
                    <input type="password" name="password" placeholder="Digite sua nova senha" required="required">
                </div>
            </div>

            <div class="item">
                <div>Repetir senha</div>
                <div class="input">
                    <input type="password" name="passwordRepeat" placeholder="Repita a nova senha" required="required">
                </div>
            </div>

            <div class="footer">
                <button class="button" type="submit">Nova Senha</button>
            </div>
            <input type="hidden" name="token" value="{{token}}">
        </form>
    </section>

{% endblock content %}