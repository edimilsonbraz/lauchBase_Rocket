{% extends "./layoutLogin.njk" %}

    {% block head %}
        <title>Foodfy - Forgot</title>
    {% endblock %}

{% block content %}

    <section class="login password content">

        <form method="POST" action="/admin/forgot-password">

            <div class="header">
                <a href="/admin/login">
                <img src="/images/back.svg" alt="Voltar">
            </a>
                <h3>Esqueceu a Senha?</h3>
            </div>

            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email para recuperar sua senha" 
                        value="{{ user.email }}" 
                        onblur="Validate.apply(this, 'isEmail')"
                        required="required"
                    >
                </div>
            </div>

            <div class="footer">
                <button class="button" type="submit">Recuperar</button>
            </div>
        </form>
    </section>

{% endblock content %}