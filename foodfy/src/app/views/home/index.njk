{% extends "./layout.njk" %}
   
    {% block head %}
        <title>Foodfy - Home</title>
    {% endblock %}

{% block content %}

    <div class="content">

        <div class="banner">
            <div class="banner__texto">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos
                   com receitas criadas por profissionais
                   do mundo inteiro. 
                </p>
            </div>
            <img src="/images/chef.png" alt="image chef">
        </div>

        <div class="container">
            <h2>Mais acessadas</h2>

            <div class="cards">
             
                {% for recipe in recipes %}
                    {% if loop.index0 < 6 %}
                        <div class="card" id="{{ recipe.id }}">
                            <img src="{{ recipe.image }}" alt="">
                            <div class="card__text">
                                <h3>{{ recipe.title }}</h3>
                                <span class="autor">por {{recipe.chef_name}} </span>
                            </div>                      
                        </div>
                    {% endif %}    
                {% endfor %}
             
            </div>
        </div>
    </div>

{% endblock %}
    
