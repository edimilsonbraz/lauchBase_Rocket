{% extends "layout.njk" %}

{% block content %}

<div class="card">
    
    <section 
        class="avatar" 
        style="background: url({{ student.avatar_url}}) 
        no-repeat center center / cover">
    </section>

    <section class="details">
        <div class="topo">
            <h3>Detalhes</h3>
        </div>

        <div class="item">
            <div>Estudante</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{ student.email}}</div>
        </div>

        <div class="item">
            <div>Anivers√°rio</div>
            <div>{{ student.birth }}</div>
        </div>

        <div class="item">
            <div>Ano Escolar</div>
            <div>{{ student.school_year }}</div>
        </div>

        <div class="item">
            <div>Aluno de</div>
            <div>{{ student.teacher_name }}</div>
        </div>

        <div class="item">
            <div>Membro Desde</div>
            <div>{{ student.created_at}}</div>
        </div>

        <div class="newbutton">
            <a class="button" href='/students/{{student.id}}/edit'>Editar</a>

            <form id="form-delete" action="/students?_method=DELETE" method="post">
                <input type="hidden" name="id" value={{ student.id }}>
                <button type="submit">Deletar</button>
            </form>
        </div>
                {% include '../confirm.njk' %}
    </section>
</div>

{% endblock content %}