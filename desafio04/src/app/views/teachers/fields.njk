<section class="details">
        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url"
                    placeholder="http://"
                    value="{{ teacher.avatar_url }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Teacher</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Nome do Professor"
                    value="{{ teacher.name }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value="{{ teacher.birth }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
               <select name="education_level">
                   <option value="" selected >Escolha uma opção</option>

                   <option 
                        value="EMC" {% if teacher.education_level == 'EMC' %}
                        selected {% endif %}>Ensino Médio Completo
                    </option>
                    <option 
                        value="ESC" {% if teacher.education_level == 'ESC' %}
                        selected {% endif %}>Superior Completo
                    </option>
                    <option 
                        value="MC" {% if teacher.education_level == 'MC' %}
                        selected {% endif %}>Mestrado
                    </option>
                    <option 
                        value="DC" {% if teacher.education_level == 'DC' %}
                        selected {% endif %}>Doutorado
                    </option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="class_type" 
                        value="Presencial"
                    >Presencial
                </span>
                <span>
                    <input 
                        type="radio" 
                        name="class_type" 
                        value="À Distancia"
                    >À Distancia
                </span>
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text" 
                    name="subjects_taught"
                    placeholder="Separe as matérias por vírgula"
                    value="{{ teacher.subjects_taught }}"
                >
            </div>

            <button type="submit">Salvar</button>
            
        </div>

         
</section>